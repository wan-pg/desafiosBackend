<div class="container px-10">
  <h1>LOGIN ECOMMERCE</h1>
  <hr>
  <BR></BR>

  <form class="w-25 my-10" action="/api/sessions/login" method="post" >

    {{#if error}}
        <div><strong style="color:red;">{{error}}</strong></div>
    {{/if}}

    {{#if mensaje}}
        <div><strong style="color:green;">{{mensaje}}</strong></div>
    {{/if}}
    
    <div class="row mb-3">
      <label for="inputEmail3" class="col-sm-2  mx-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <input type="email" class="form-control" id="inputEmail3" name="email">
      </div>
    </div>
    <div class="row mb-3">
      <label for="inputPassword3" class="col-sm-2 mx-2 col-form-label">Password</label>
      <div class="col-sm-10">
        <input type="password" class="form-control" id="inputPassword3" name="password">
      </div>
    </div> 
    <div class="container d-flex flex-row ">
       <form >
        <button  class="btn btn-primary m-3 w-30" >Login</button>
      </form>
      <form action="/registro">
        <button  class="btn btn-primary m-3 w-30" >Registro</button>
      </form>
    </div>  
  </form>

</div>